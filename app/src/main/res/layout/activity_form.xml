<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.activity.FormularioProdutoActivity">


    <EditText
        android:id="@+id/activity_form_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Task title"
        android:inputType="textCapSentences"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activity_form_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Task description"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/activity_form_title"
        app:layout_constraintStart_toStartOf="@+id/activity_form_title"
        app:layout_constraintTop_toBottomOf="@+id/activity_form_title" />

    <EditText
        android:id="@+id/activity_form_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="MM/DD/YY"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/activity_form_title"
        app:layout_constraintStart_toStartOf="@+id/activity_form_title"
        app:layout_constraintTop_toBottomOf="@+id/activity_form_description" />

    <Button
        android:id="@+id/activity_form_button_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_margin="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_form_data"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>